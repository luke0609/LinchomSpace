<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mine.Disclose_activity">

    <RelativeLayout
        android:id="@+id/rl_dis"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/iv_disback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/article_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/tv_disclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要爆料"
            android:textColor="@color/text_style"
            android:textSize="19sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/b_submit"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发 送"
            android:textColor="@color/text_style"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <View
        android:id="@+id/v_dis"
        android:layout_below="@id/rl_dis"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_marginTop="2dp"/>
    <RelativeLayout
        android:id="@+id/rl_spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_dis"
        >

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_biaoti"
        android:layout_below="@id/rl_spin"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:id="@+id/tv_biaoti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_mine_baoliao"
            android:text="标 题"
            android:textSize="18sp"
            android:textColor="#f7f7f7"
            android:padding="10dp"
            android:background="#efeeee"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_mine_baoliao"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="我的爆料"
            android:layout_alignBaseline="@+id/tv_biaoti"
            android:layout_alignBottom="@+id/tv_biaoti"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <View
        android:layout_above="@+id/et_dis"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        />
    <RelativeLayout
        android:id="@+id/et_dis"
        android:layout_below="@id/rl_biaoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="true"
        >
        <EditText
            android:id="@+id/ed_disclose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="分享身边新鲜事......"
            android:lines="9"
            android:gravity="top"
            android:padding="10dp"
            android:background="@null"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view"
       android:layout_below="@+id/et_dis"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        />

        <me.iwf.photopicker.widget.MultiPickResultView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:id="@+id/pic_view"/>

