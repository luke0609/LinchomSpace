<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#ffffff"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout

            android:id="@+id/rl_goods_common_head"

            android:layout_width="match_parent"
            android:layout_height="34dp">

            <TextView
                android:id="@+id/tv_goods_common_name"
                android:layout_centerVertical="true"

                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:text="北京智巢科技"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <TextView
                android:id="@+id/tv_goods_common_time"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="2006-11-11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/rl_goods_common_head"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_marginLeft="10dp"

                android:id="@+id/tv_goods_common_content"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:textSize="19sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />


        </RelativeLayout>





    </RelativeLayout>



</RelativeLayout>
