<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:id="@+id/rl_msg"
    android:layout_width="match_parent"
    android:layout_height="40dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:src="@mipmap/avatar"/>
        <TextView
            android:textColor="#7a7c80"
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_logo"
            android:layout_alignParentTop="true"
            android:text="用户名"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:singleLine="true"/>

        <TextView
            android:textColor="#ABAEB2"
            android:id="@+id/add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-10-14"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:layout_below="@+id/tv_chat_username"
            android:layout_toRightOf="@+id/user_logo"
            android:layout_alignBottom="@+id/user_logo"

            />

    </RelativeLayout>

    <TextView
        android:id="@+id/topic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="交流名"
        android:textColor="#313233"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/rl_msg"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/communication_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#313233"
        android:maxLines="2"
        android:textSize="15sp"
        android:layout_below="@+id/topic_name"
        android:text="交流标题内容"
        android:layout_marginBottom="13dp"
        />

</RelativeLayout>
