<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#212121">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评 论"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/rl_msg"
        android:layout_below="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:src="@drawable/touxiang"/>
        <TextView
            android:textColor="#808080"
            android:id="@+id/tv_chat_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_logo"
            android:layout_alignParentTop="true"
            android:text="用户名"
            android:layout_centerVertical="true"
            android:singleLine="true"/>
        <Button
            android:id="@+id/rmk_tip"
            android:textSize="13sp"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/tv_chat_username"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:layout_alignTop="@+id/tv_chat_username"
            android:background="@drawable/chat_louzhu_shape"
            android:textColor="#fff"
            android:text="楼主"/>
        <TextView
            android:textColor="#808080"
            android:id="@+id/tv_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-10-14"
            android:gravity="center_vertical"
            android:layout_below="@+id/tv_chat_username"
            android:layout_toRightOf="@+id/user_logo"
            android:layout_alignBottom="@+id/user_logo"

            />

        <ImageView
            android:layout_alignTop="@+id/user_logo"
            android:id="@+id/kid_remark"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/dc"
            android:layout_marginTop="4dp"
            />



    </RelativeLayout>

    <TextView
        android:id="@+id/tv_chat_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="回复内容"
        android:textColor="#80000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/rl_msg"
        android:textSize="14sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"/>
<View
    android:layout_below="@+id/tv_chat_content"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#f0f0f0"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/remark_bar"
        android:background="#f0f0f0"

        android:layout_alignParentBottom="true">
        <LinearLayout

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/et_remark"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="0dp"
                android:singleLine="true"
                android:layout_weight="8"

                android:hint="回复楼主"
                android:textColor="#808080"
                android:textColorHint="#f0f0f0"
                android:layout_height="match_parent"
                android:background="@drawable/ll_shape"
                />
            <Button
                android:id="@+id/bt_remark"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="#808080"
                android:text="发 表"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
