<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30808080"
    tools:context="linchom.com.linchomspace.shopping.GoodsListActivity">

    <LinearLayout
        android:id="@+id/rl_goodsList_search"
        android:background="@color/main_style"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <ImageView
            android:id="@+id/iv_goodsList_back"
            android:src="@drawable/back_white"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"

            />




        <EditText
            android:layout_centerVertical="true"
            android:id="@+id/et_goods_search"
            android:textColor="#212121"
            android:textColorHint="#808080"
            android:textSize="14sp"
            android:paddingLeft="3dp"
            android:background="@drawable/find_search_shape"
            android:hint="请输入感兴趣的商品"
            android:drawableLeft="@drawable/search40"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="32dp"
            />
        <Button
            android:id="@+id/btn_goods_list_btnSearch"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:background="@drawable/goodssearch_shape"
            android:textColor="#808080"
            android:text="搜 索"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="32dp" />









    </LinearLayout>






    <RelativeLayout

        android:id="@+id/rl_goodsList_cate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:layout_below="@+id/rl_goodsList_search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">





        <RelativeLayout
            android:id="@+id/rl_goodsList_two"

            android:layout_width="80dp"
            android:layout_height="match_parent"

            android:layout_centerInParent="true"


            >

            <Button
                android:textColor="#808080"
                android:id="@+id/btn_goodsList_hot"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="销量"
                android:textSize="16sp"
                android:background="@null"
                android:layout_centerInParent="true"

                />

            <View
                android:id="@+id/v_goodLists_hot_line"
                android:layout_width="44dp"
                android:layout_height="2dp"
                android:background="#EE4000"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"

                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_goodsList_one"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/rl_goodsList_two"


            >

            <Button
                android:textColor="#808080"

                android:id="@+id/btn_goodsList_default"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="默认"
                android:textSize="16sp"
                android:background="@null"
                android:layout_centerInParent="true"

                />

            <View
                android:id="@+id/v_goodLists_default_line"
                android:layout_width="44dp"
                android:layout_height="2dp"
                android:background="#EE4000"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                />




        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_goodsList_three"

            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/rl_goodsList_two"
            >

            <Button
                android:textColor="#808080"

                android:id="@+id/btn_goodsList_new"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="价格"
                android:textSize="16sp"
                android:background="@null"
                android:layout_centerInParent="true"

                />

            <View
                android:id="@+id/v_goodLists_new_line"
                android:layout_width="44dp"
                android:layout_height="2dp"
                android:background="#EE4000"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"

                />


        </RelativeLayout>

        <CheckBox

            android:id="@+id/radiobtn_goodslist_listcate"

            android:drawableLeft="@drawable/radiobtn_goodslist_selector"

            android:layout_centerVertical="true"
            android:button="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"

            />




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#30808080"
                android:layout_alignParentBottom="true"

                />



    </RelativeLayout>


    <FrameLayout

        android:id="@+id/fl_goodslist_listcate"

        android:layout_below="@id/rl_goodsList_cate"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    </FrameLayout>




</RelativeLayout>
