<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:dslv="http://schemas.android.com/apk/res-auto"
    tools:context="linchom.com.linchomspace.mine.MyChat_activity">
    <RelativeLayout
        android:id="@+id/rl_ping"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/main_style">
        <ImageView
            android:id="@+id/iv_chat_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="我的交流"
            android:textColor="#FFF"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <!--<ListView-->
    <!--android:id="@+id/lv_myChatList"-->
    <!--android:layout_below="@id/rl_ping"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <!--</ListView>-->
    <RelativeLayout
        android:id="@+id/rl_pro"
        android:layout_below="@id/rl_ping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/firstBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:progress="0"
            android:visibility="gone"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/lv_myChatList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#000000"
            android:divider="#19000000"
            android:dividerHeight="4dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:smoothScrollbar="true"
            ptr:ptrAnimationStyle="rotate"
            ptr:ptrHeaderTextColor="#000000"
            ptr:ptrHeaderSubTextColor="#00ffff"
            ptr:ptrHeaderBackground="@null"
            ptr:ptrDrawable="@drawable/shuaxin">
        </com.handmark.pulltorefresh.library.PullToRefreshListView>

    </RelativeLayout>
</RelativeLayout>
