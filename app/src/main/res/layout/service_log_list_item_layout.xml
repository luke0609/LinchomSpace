<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/service_log_item_shape"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="智能家居"
            android:id="@+id/tv_service_log"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />



        <TextView
            android:text=""

            android:lines="5"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"


            android:textColor="@color/text_style"

            android:id="@+id/tv_service_content"

            android:textSize="14sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_service_log"
            />

        <com.etsy.android.grid.util.DynamicHeightImageView
            android:id="@+id/iv_service_log_img"
            android:layout_below="@id/tv_service_content"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"

            />

        <TextView
            android:layout_below="@+id/iv_service_log_img"
            android:textColor="@color/text_style"


            android:id="@+id/tv_service_addtime"


            android:gravity="right"



            android:textSize="14sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"

            />



    </RelativeLayout>


</RelativeLayout>
