<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">
    <LinearLayout
        android:background="#212121"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linear"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_white"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/logo"
            android:background="@drawable/home_shape"
            android:scaleType="centerInside"

            android:hint="搜你想搜的"
            android:textColor="#000"
            android:textSize="12sp"
            android:textColorHint="#797777"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/linear"
        android:id="@+id/rl_xiala"
        android:layout_width="match_parent"
        android:layout_height="32dp">
        <HorizontalScrollView

            android:id="@+id/hs_navi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:scrollbars="none"
            >


            <LinearLayout
                android:id="@+id/title_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="#fff"
                >

                <LinearLayout
                    android:id="@+id/lay"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal"

                    >
                </LinearLayout>

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:background="#2022a1"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>
        </HorizontalScrollView>

        <ImageButton
            android:id="@+id/ib_xiala"
            android:layout_alignParentRight="true"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="32dp"

            android:src="@drawable/navi_xiala"/>
    </RelativeLayout>

    <View
        android:id="@+id/strut_new1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        />
    <android.support.v4.view.ViewPager
        android:layout_below="@id/strut_new1"
        android:background="#fff"
        android:id="@+id/vp_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</RelativeLayout>

