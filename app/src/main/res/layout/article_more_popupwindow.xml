<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fontselector"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#f5f3f3"
        android:orientation="horizontal"
        android:visibility="gone">
        <com.fc.homepage.View.SlideSelectView
            android:id="@+id/slideSelectView"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="#f5f3f3"
            app:circleCount="3"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#f5f3f3"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#f5f3f3" >

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_night"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"
                android:src="@drawable/article_night"
                android:background="@drawable/circle"
              />



            <TextView
                android:id="@+id/tv_night"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_below="@id/iv_night"
                android:gravity="center"
                android:text="日间/夜间"
                android:textColor="#161616"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1">
            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_font"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"
                android:background="@drawable/circle"
                android:src="@drawable/arcticle_font"
             />


            <TextView
                android:id="@+id/tv_font"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_below="@id/iv_font"
                android:gravity="center"
                android:text="显示设置"
                android:textColor="#161616"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_article_popup_cancel"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#fff"
        android:text="取消"
        android:textColor="#0d0101"
        android:textSize="20dp" />

</LinearLayout>
