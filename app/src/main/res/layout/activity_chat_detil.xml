<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="linchom.com.linchomspace.chat.ChatDetilActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#262B4D">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交流正文"
            android:textSize="20sp"
            android:textColor="#808080"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/cmn_content"
        android:background="@drawable/chat_item_shape"
        android:layout_below="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/title"
            android:text="我在北京有个别墅客户想安装智能家居，谁有好的品牌推荐？"
            android:textColor="#808080"
            android:textSize="20sp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <RelativeLayout
            android:id="@+id/rl_msg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/user_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:src="@drawable/touxiang"/>
            <TextView
                android:textColor="#808080"
                android:id="@+id/tv_chat_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/user_logo"
                android:layout_alignParentTop="true"
                android:text="用户名"
                android:layout_centerVertical="true"
                android:singleLine="true"/>
            <Button
                android:id="@+id/rmk_tip"
                android:textSize="13sp"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/tv_chat_username"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:clickable="false"
                android:layout_alignTop="@+id/tv_chat_username"
                android:background="@drawable/chat_louzhu_shape"
                android:textColor="#fff"
                android:text="楼主"/>

            <TextView
                android:textColor="#808080"
                android:id="@+id/tv_chat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-10-14"
                android:gravity="center_vertical"
                android:layout_below="@+id/tv_chat_username"
                android:layout_toRightOf="@+id/user_logo"
                android:layout_alignBottom="@+id/user_logo"

                />


        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_chat_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_msg"
            android:layout_marginBottom="10dp"
            android:text="请问厨房等家具怎么摆放比较合适，家里的阳台是向阳的，那么背光的呢？？"/>

    </LinearLayout>



    <RelativeLayout
        android:layout_below="@+id/cmn_content"
        android:id="@+id/invis"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#f0f0f0"
        >

        <ImageView
            android:id="@+id/remark"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/dc"/>
        <TextView
            android:id="@+id/tv"
            android:layout_toRightOf="@id/remark"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="回复数:" />
        <TextView
            android:id="@+id/remark_num"
            android:layout_toRightOf="@+id/tv"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
            android:text="0" />

    </RelativeLayout>
    <com.twotoasters.jazzylistview.JazzyListView
        android:layout_below="@+id/invis"
        android:id="@+id/lv"
        android:layout_above="@+id/remark_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/remark_bar"
        android:background="#f0f0f0"

        android:layout_alignParentBottom="true">
        <LinearLayout

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/et_remark"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="0dp"
                android:singleLine="true"
                android:layout_weight="8"

                android:hint="回复楼主"
                android:textColor="#808080"
                android:textColorHint="#f0f0f0"
                android:layout_height="match_parent"
                android:background="@drawable/ll_shape"
                />
            <Button
                android:id="@+id/bt_remark"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="#808080"
                android:text="发 表"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
