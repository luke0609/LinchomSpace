<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="linchom.com.linchomspace.shopping.GoodsDetailActivity">


    <linchom.com.linchomspace.common.TitleBar
        android:id="@+id/bar_goods_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="产品详情"
        app:titleRightVis="false"
        >




    </linchom.com.linchomspace.common.TitleBar>

    <ListView
        android:id="@+id/lv_goods_detail"

        android:layout_below="@id/bar_goods_detail"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        >



    </ListView>



</RelativeLayout>
