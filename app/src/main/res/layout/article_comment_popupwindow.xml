<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/ll_comment_popup"
    android:layout_height="160dp"
    android:background="#f7f7f7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/et_write_comment"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/home_shape"
            android:gravity="top|left"
            android:textSize="14dp"
            android:textColorHint="#cac8c8"
            android:hint="优质评论将会优先展示"
             />
        <Button
            android:id="@+id/publish_comment"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="发  表"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/et_write_comment"
            android:background="@drawable/home_shape"
            />
    </RelativeLayout>
</LinearLayout>