<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="linchom.com.linchomspace.mine.HeadImage_activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/rl_gai"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff">
            <ImageView
                android:id="@+id/iv_back1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/article_back" />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="个人资料"
                android:textSize="18sp"
                android:textColor="@color/text_style"
                />
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="完 成"
                android:textSize="18sp"
                android:textColor="@color/text_style"
                />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_gai"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="true">


                <RelativeLayout
                    android:id="@+id/rl_h"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="12dp"
                    android:background="#fff"

                    >
                    <TextView
                        android:id="@+id/tv_h"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="头像"
                        android:textSize="18dp"
                        android:textColor="@color/text_style"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />

                    <ImageView
                        android:id="@+id/iv_user_photo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/kid"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="20dp"
                        />
                    <ImageView
                        android:id="@+id/iv_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/iv_editinfo"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#808080"
                    android:layout_below="@id/rl_h"/>

                <RelativeLayout
                    android:id="@+id/rl_h1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/rl_h"
                    android:background="#fff"
                    android:layout_marginBottom="0.3dp"
                    >
                    <TextView
                        android:id="@+id/tv_h1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="昵称"
                        android:textColor="@color/text_style"
                        android:textSize="17sp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/tv_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="胡萝卜"
                        android:textSize="14sp"
                        android:textColor="#b9b5b5"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/tv_h1"
                        />
                </RelativeLayout>
                <!--<ImageView-->
                <!--android:id="@+id/iv_go1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="30dp"-->
                <!--/> android:src="@drawable/iv_editinfo"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginRight="8dp"-->
                <!--/>-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:background="#ccc"
                    android:layout_below="@id/rl_h1"/>
                <RelativeLayout
                    android:id="@+id/rl_add"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#fff"
                    android:layout_below="@+id/rl_h1"
                    android:layout_marginBottom="0.3dp"
                    >
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="性别"
                        android:textColor="@color/text_style"
                        android:textSize="17sp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"
                        android:textSize="14sp"
                        android:textColor="#b9b5b5"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_add"
                        />
                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/iv_editinfo"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:layout_below="@id/rl_add"/>
                <RelativeLayout
                    android:id="@+id/rl_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/rl_add"
                    android:background="#fff"
                    android:layout_marginBottom="15dp"
                    >
                    <TextView
                        android:id="@+id/tv_h2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="生日"
                        android:textSize="17sp"
                        android:textColor="@color/text_style"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_birthday1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1996-09-08"
                        android:textSize="14sp"
                        android:textColor="#b9b5b5"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_go2"
                        />
                    <ImageView
                        android:id="@+id/iv_go2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/iv_editinfo"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:layout_below="@id/rl_birthday"/>

                <RelativeLayout
                    android:id="@+id/rl_h3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#fff"
                    android:layout_below="@+id/rl_birthday"
                    android:layout_marginBottom="0.3dp"
                    >
                    <TextView
                        android:id="@+id/tv_h3"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="公司电话"
                        android:textSize="17sp"
                        android:textColor="@color/text_style"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/tv_office_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345678954"
                        android:textSize="14sp"
                        android:textColor="#b9b5b5"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/tv_h3"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:layout_below="@id/rl_h3"/>
                <RelativeLayout
                    android:id="@+id/rl_h4"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/rl_h3"
                    android:background="#fff"
                    android:layout_marginBottom="0.3dp"
                    >

                    <EditText
                        android:id="@+id/tv_mobile_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14534865"
                        android:textSize="14sp"
                        android:background="@null"
                        android:textColor="#b9b5b5"
                        android:gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/tv_h4"
                        />

                    <TextView
                        android:id="@+id/tv_h4"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="手机号"
                        android:textSize="17sp"

                        android:textColor="@color/text_style"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="21dp" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:layout_below="@id/rl_h4"/>
                <RelativeLayout
                    android:id="@+id/rl_h5"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/rl_h4"
                    android:background="#fff"
                    android:layout_marginBottom="15dp"

                    >
                    <TextView
                        android:id="@+id/tv_h5"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="家庭电话"
                        android:textSize="17sp"
                        android:textColor="@color/text_style"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/tv_home_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12939"
                        android:layout_marginRight="10dp"
                        android:textSize="14sp"
                        android:background="@null"
                        android:textColor="#b9b5b5"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/tv_h5"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:layout_below="@id/rl_h5"/>

                <RelativeLayout
                    android:id="@+id/rl_h6"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/rl_h5"
                    android:background="#fff"
                    android:layout_marginBottom="0.3dp"
                    >
                    <TextView
                        android:id="@+id/tv_h6"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="邮箱"

                        android:textSize="17sp"
                        android:textColor="@color/text_style"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12939856743@qq.com"
                        android:textSize="14sp"
                        android:textColor="#b9b5b5"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#808080"
                    android:layout_below="@id/rl_h6"/>
                <RelativeLayout
                    android:id="@+id/rl_h7"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/rl_h6"
                    android:background="#fff"
                    >
                    <TextView
                        android:id="@+id/tv_h7"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:text="MSN"
                        android:textSize="17sp"
                        android:textColor="@color/text_style"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/msn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12939856743@qq.com"
                        android:textSize="14sp"
                        android:layout_marginRight="10dp"
                        android:textColor="#b9b5b5"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:layout_below="@id/rl_h7"
                    android:visibility="gone"/>
                <RelativeLayout
                    android:id="@+id/rl_zh"
                    android:layout_below="@id/v_line"
                    android:layout_width="match_parent"
                    android:background="#f7f5f5"
                    android:visibility="gone"
                    android:layout_height="60dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#aeacac"
                        android:layout_centerVertical="true"
                        android:text="账号绑定"
                        android:visibility="gone"
                        />
                </RelativeLayout>
                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:layout_below="@id/rl_zh"
                    />
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_switch"
                    android:layout_below="@id/rl_zh"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <TextView
                        android:id="@+id/tv_h8"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="邮箱"
                        android:textSize="18sp"
                        android:visibility="gone"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="New Switch"
                        android:layout_toRightOf="@id/tv_h8"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="340dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="340dp" />
                </RelativeLayout>
                <View
                    android:visibility="gone"
                    android:id="@+id/v_back"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d9d5d5"
                    android:layout_below="@id/rl_switch"
                    />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
