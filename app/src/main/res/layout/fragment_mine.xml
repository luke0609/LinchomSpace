<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        >
        <RelativeLayout
            android:id="@+id/rv_head0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/live_head_passerby"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_below="@id/iv_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="麦兜"
                android:textColor="#000"
                android:textSize="24dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                />
        </RelativeLayout>
        <View
            android:id="@+id/v_view"
            android:layout_below="@id/rv_head0"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="#b6b7b7"/>

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_below="@id/v_view"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="80dp">

            <Button
                android:id="@+id/b_loved"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="收藏"
                android:textSize="20sp"
                android:background="#fff"
                android:padding="4dp"
                android:drawableTop="@drawable/love"
                android:layout_height="80dp" />
            <Button
                android:id="@+id/b_set"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="设置"
                android:textSize="20sp"
                android:background="#fff"
                android:padding="4dp"
                android:drawableTop="@drawable/she"
                android:layout_height="80dp" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="夜间"
                android:textSize="20sp"
                android:background="#fff"
                android:padding="4dp"
                android:drawableTop="@drawable/night"
                android:layout_height="80dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@id/ll_button"
            android:id="@+id/person_center_content"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="活动"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_active"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_center_content1"
            android:layout_below="@id/person_center_content"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="商城"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_store"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/person_center_content1"
            android:id="@+id/person_center_content2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:id="@+id/tv_dd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="订单"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_indent"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_center_content3"
            android:layout_below="@id/person_center_content2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="我的交流"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_chat"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_center_content4"
            android:layout_below="@id/person_center_content3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="我要爆料"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_disclose"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_center_content5"
            android:layout_below="@id/person_center_content4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="消息通知"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_alerts"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>



