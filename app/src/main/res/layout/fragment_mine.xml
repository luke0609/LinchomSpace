<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece9e9"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rv_head0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/live_head_passerby"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_below="@id/iv_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="麦兜"
                android:textColor="#000"
                android:textSize="24dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                />
        </RelativeLayout>

        <View
            android:id="@+id/v_view"
            android:layout_below="@id/rv_head0"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#0e0e0e"/>

        <RelativeLayout
            android:id="@+id/rv_button"
            android:layout_below="@id/v_view"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                >
                <ImageView
                    android:id="@+id/iv_loved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/shoucang"
                    />
                <Button
                    android:id="@+id/b_loved"
                    android:layout_below="@+id/iv_loved"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fcfafa"
                    android:textColor="#291a1a"
                    android:text="收藏"
                    android:textSize="22sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >
                <ImageView
                    android:id="@+id/iv_set"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shezhi"
                    />
                <Button
                    android:id="@+id/b_set"
                    android:layout_below="@id/iv_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fcfbfb"
                    android:textColor="#291a1a"
                    android:text="设置"
                    android:textSize="22sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:id="@+id/iv_night"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yueliang"
                    />
                <Button
                    android:id="@+id/b_night"
                    android:layout_below="@id/iv_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fcfafa"
                    android:text="夜间"
                    android:textSize="22sp"
                    android:textColor="#291a1a"
                    />
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@id/rv_button"
            android:id="@+id/person_center_content"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="活动"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_active"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/person_center_content1"
            android:layout_below="@id/person_center_content"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="商城"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_store"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/person_center_content1"
            android:id="@+id/person_center_content2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:id="@+id/tv_dd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="订单"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_indent"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_center_content3"
            android:layout_below="@id/person_center_content2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="我的交流"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_chat"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_center_content4"
            android:layout_below="@id/person_center_content3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="团购省钱"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_saveMoney"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_center_content5"
            android:layout_below="@id/person_center_content4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="我要爆料"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_disclose"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_center_content6"
            android:layout_below="@id/person_center_content5"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="消息通知"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_alerts"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_center_content7"
            android:layout_below="@id/person_center_content6"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="反馈"
                android:textColor="#332626"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/iv_feedBack"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_editinfo"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>



