<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">


        <ImageView
            android:id="@+id/iv_goods_order_img"


            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="120dp"
            android:layout_height="120dp" />


        <TextView
            android:id="@+id/tv_goods_order_goodsName"
            android:textColor="@color/text_style"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:text="测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/iv_goods_order_img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            />

        <TextView
            android:id="@+id/tv_goods_order_fuhao"
            android:textColor="#90FF3030"

            android:gravity="center"
            android:textSize="20sp"

            android:layout_alignLeft="@id/tv_goods_order_goodsName"
            android:layout_below="@id/tv_goods_order_goodsName"
            android:text="¥"
            android:layout_width="50dp"
            android:layout_height="50dp"



            />
        <TextView

            android:id="@+id/tv_goods_order_price"

            android:gravity="center_vertical"
            android:textColor="#90FF3030"

            android:textSize="18sp"
            android:layout_toRightOf="@id/tv_goods_order_fuhao"

            android:layout_below="@id/tv_goods_order_goodsName"
            android:text="1000000"
            android:layout_width="85dp"
            android:layout_height="50dp"



            />



        <TextView
            android:textColor="@color/text_style"

            android:id="@+id/tv_goods_order_goodsNum"
            android:gravity="center_vertical"
            android:text="100"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"

            />
        <TextView
            android:textColor="@color/text_style"

            android:textSize="14sp"

            android:text="X"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/tv_goods_order_goodsNum"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginBottom="5dp"

            />







    </RelativeLayout>






</RelativeLayout>
