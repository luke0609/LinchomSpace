<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RadioTab" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <!-- Customize your theme here. -->
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">#848383</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="radiobtn" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_height">60dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RadiobtnTop_message" parent="Widget.AppCompat.CompoundButton.RadioButton">

        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="btn_goodsCate" parent="Base.TextAppearance.AppCompat.Button">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>


        <item name="android:layout_weight">1</item>


        <item name="android:layout_margin">5dp</item>

        <item name="android:background">@drawable/goods_catebutton_shape</item>


    </style>



</resources>
